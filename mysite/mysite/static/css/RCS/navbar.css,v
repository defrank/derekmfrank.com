 * NOTES
 *   - Forcing all generic selectors with !important to help prevent other
 *     stylesheets from interfering.
 *
 ******************************************************************************/


/* container for the entire bar */
#navbar { 
    height:                     30px !important; 
    min-width:                  960px !important; 
    width:                      100% !important; 
    /*
    min-width:                  1030px !important; 
    */
    margin                      0 !important; 
    padding:                    6px 0 !important; 
    background:                 #00aa00 !important; 
    border-bottom:              5px #00ff00 solid !important; 
    font-size:                  10pt;
}

/* container for the navbar */
#navbarcontainer { 
    width:                      924px !important; 
    /*
    width:                      1000px !important; 
    */
    margin:                     0 auto !important; 
    padding:                    0 14px !important;
}

/* logo trickery -- GIF for IE6 and PNG for the rest */
#navbarlogo { 
    float:                      left !important; 
    margin:                     0 10px !important; 
    padding:                    0 !important; 
    height:                     24px !important; 
    width:                      39px !important; 
}
/* IE6 doesn't support alpha PNGs so we serve it a GIF */
#navbarlogo { 
    background:                 url('/static/img/logo/logo.gif') no-repeat !important; 
}
/* and use a proper PNG for all other modern browsers */
html > body #navbarlogo { 
    background:                 url('/static/img/logo/logo.png') no-repeat !important; 
}

/* move the heading/paragraph text offscreen */
#navbarlogo p { 
    margin:                     0 !important; 
    padding:                    0 !important; 
    text-indent:                -9999px !important; 
}
#navbarlogo h1 { 
    margin:                     0 !important; 
    padding:                    0 !important; 
    text-indent:                -9999px !important; }

/* make the link the same size as the logo */
#navbarlogo a { 
    display:                    block !important; 
    height:                     24px !important; 
    width:                      39px !important; 
}

/* display the list inline, float it to the left and style it */
#navbarmenu ul { 
    display:                    inline !important; 
    float:                      left !important; 
    list-style:                 none !important; 
    margin:                     auto !important; 
    padding:                    0 !important; 
}
#navbarwidget ul { 
    display:                    inline !important; 
    float:                      right !important; 
    list-style:                 none !important; 
    margin:                     auto !important; 
    padding:                    0 !important; 
}
#navbarmenu ul li,
#navbarwidget ul li { 
    color:                      #ffffff; 
    float:                      left !important; 
    font-size:                  1em /*12px*/ !important; 
    font-family:                sans-serif !important; 
    line-height:                35px !important; 
    padding-right:              8px !important; 
    padding-left:               8px !important; 
}

/* style the links */
#navbarmenu ul#navbarlist li a,
#navbarwidget ul#navbaritems li a { 
    color:                      #ffffff; 
    font-weight:                bold !important; 
    text-decoration:            none; 
}
#navbarmenu ul li a:hover,
#navbarwidget ul li a:hover { 
    color:                      #00ff00 !important; 
}
