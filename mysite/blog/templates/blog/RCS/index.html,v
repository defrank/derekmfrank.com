<div class="box">
    <h2 class="sub">Archives</h2>
    {% if authors %}
        <h4>By author:</h4>
        <ul>
        {% for author in authors %}
            <a href="{% url 'blog.views.archive_author' username=author.username %}" 
               title="Archive for {% nameof author %}{% if author.title %} | {{ author.title }}{% endif %}">
                <span>{% nameof author %}</span><br />
            </a>
        {% endfor %}
        </ul>
    {% endif %}

    {% if dates %}
        <h4>By date:</h4>
        <ul>
        {% for year, months in dates %}
            <a href="{% url 'blog.views.archive_year' year=year %}"
               title="Archive for {{ year }}">
                <span>{{ year }}</span>
            </a>
            <ul>
            {% for month, days in  months %}
                <div class="inline">
                <a href="{% url 'blog.views.archive_month' year=year month=month %}"
                   title="Archive for {{ year }}/{{ month }}">
                    {% if month == 1 %}
                        <span>January:</span>
                    {% elif month == 2 %}
                        <span>February:</span>
                    {% elif month == 3 %}
                        <span>March:</span>
                    {% elif month == 4 %}
                        <span>April:</span>
                    {% elif month == 5 %}
                        <span>May:</span>
                    {% elif month == 6 %}
                        <span>June:</span>
                    {% elif month == 7 %}
                        <span>July:</span>
                    {% elif month == 8 %}
                        <span>August:</span>
                    {% elif month == 9 %}
                        <span>September:</span>
                    {% elif month == 10 %}
                        <span>October:</span>
                    {% elif month == 11 %}
                        <span>November:</span>
                    {% elif month == 12 %}
                        <span>December:</span>
                    {% endif %}
                </a>
                {% for day in days %}
                    {% if forloop.last %}
                        <a href="{% url 'blog.views.archive_day' year=year month=month day=day %}"
                           title="Archive for {{ year }}/{{ month }}/{{ day }}">
                            <span>{{ day }}</span>
                        </a>
                    {% else %}
                        <a href="{% url 'blog.views.archive_day' year=year month=month day=day %}"
                           title="Archive for {{ year }}/{{ month }}/{{ day }}">
                            <span>{{ day }}</span>
                        </a>
                        <span>, </span>
                    {% endif %}
                {% endfor %}
                </div>
            {% endfor %}
            </ul>
        {% endfor %}
        </ul>
    {% endif %}
