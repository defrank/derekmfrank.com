{% load static from staticfiles %}
{% load url from future %}

<a class="header" href="{% url "blog" %}{{ post.id }}/" 
   title="View blog post {{ post.id }}"><h3>{{ post.title }}</h3>
</a>
<span class="timestamp">{{ post.timestamp }}</span>
{% if post.image or post.image_url %}
    <div class="center">
        {% if post.image %}
            <img src="{% static post.image %}" alt="Blog Post {{ post.id }} Image" />
        {% else %}
            <img src="{{ post.image_url }}" alt="Blog Post {{ post.id }} Image" />
        {% endif %}
    </div>
{% endif %}
<ul>
    {% autoescape off %}
        <span>{{ post.body|linebreaks }}</span>
    {% endautoescape %}
